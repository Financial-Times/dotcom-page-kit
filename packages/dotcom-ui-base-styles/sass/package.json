{
  "name": "n-ui-foundations",
  "version": "0.0.0",
  "description": "Sass & JS foundations and utilities for the FT.com front end",
  "main": "main.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "make test",
    "sass": "node-sass main.scss --include-path bower_components > test/styles.css",
    "prepare": "npx snyk protect || npx snyk protect -d || true",
    "preinstall": "[[ \"$INIT_CWD\" != \"$PWD\" ]] || npm_config_yes=true npx check-engine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/n-ui-foundations.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Financial-Times/n-ui-foundations/issues"
  },
  "homepage": "https://github.com/Financial-Times/n-ui-foundations#readme",
  "devDependencies": {
    "@financial-times/n-gage": "^8.3.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-classes": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "bower": "^1.8.8",
    "bower-webpack-plugin": "^0.1.9",
    "chai": "^4.0.0",
    "check-engines": "^1.5.0",
    "eslint": "^3.15.0",
    "karma": "^3.1.1",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-html-reporter": "^0.2.7",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^1.3.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "lintspaces-cli": "^0.6.0",
    "mocha": "^6.0.0",
    "node-sass": "^6.0.1",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.8.0",
    "snyk": "^1.168.0",
    "webpack": "^1.14.0"
  },
  "config": {},
  "engines": {
    "node": "12.x",
    "npm": "7.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node_modules/.bin/secret-squirrel-commitmsg",
      "pre-commit": "node_modules/.bin/secret-squirrel",
      "pre-push": "make verify -j3"
    }
  },
  "volta": {
    "node": "12.22.5",
    "npm": "7.20.2"
  }
}
