{
  "name": "@financial-times/anvil-root",
  "private": true,
  "version": "0.0.0",
  "description": "The aim of this project is to provide a high quality, well tested, and thoroughly documented, modern asset pipeline and application shell for Node.js applications based upon the latest industry standards.",
  "scripts": {
    "test": "jest",
    "test:examples": "athloi run test --filter 'example*'",
    "build": "athloi run build --filter 'anvil*' --concurrency 10 --preserve-order",
    "build:examples": "athloi run build --filter 'example*' --concurrency 10",
    "checktypes": "tsc --noEmit",
    "clean": "git clean -fxd -e .vscode",
    "clean:dist": "athloi run clean:dist --filter 'anvil*' --concurrency 10",
    "clean:install": "npm run clean && npm install",
    "clean:install:ui": "athloi run clean:install --filter 'anvil-ui-*'",
    "dev": "athloi run dev --filter 'anvil*' --concurrency 100",
    "lint": "eslint . --ext .js,.ts,.tsx,.jsx",
    "postinstall": "athloi exec npm i -- --no-package-lock && bower install",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json}'",
    "script:update": "node scripts/update-dep",
    "storybook": "npm run storybook:generate && npm run storybook:start",
    "storybook:start": "start-storybook -p 9001 -c .storybook",
    "storybook:generate": "node ./.storybook/scripts/generateConfig"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "npm run test -- --no-cache --findRelatedTests",
      "npm run prettier",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/anvil.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Financial-Times/anvil/issues"
  },
  "homepage": "https://github.com/Financial-Times/anvil#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@financial-times/athloi": "^1.0.0-beta.17",
    "@storybook/addon-knobs": "^5.1.1",
    "@storybook/addon-options": "^5.1.1",
    "@storybook/addon-viewport": "^5.1.1",
    "@storybook/react": "^5.1.1",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.26",
    "@types/react": "16.8.19",
    "@typescript-eslint/parser": "^1.2.0",
    "babel-loader": "^8.0.4",
    "bower": "^1.8.8",
    "bower-glob-resolver": "^1.0.2",
    "css-loader": "^2.1.0",
    "eslint": "^5.14.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "husky": "^2.0.0",
    "jest": "^24.1.0",
    "jest-puppeteer": "^4.2.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "puppeteer": "^1.12.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.5.1"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checktypes && lint-staged"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
