{
  "name": "@financial-times/anvil",
  "private": true,
  "version": "0.0.0",
  "description": "The aim of this project is to provide a high quality, well tested, and thoroughly documented, modern asset pipeline and application shell for Node.js applications based upon the latest industry standards.",
  "scripts": {
    "test": "jest",
    "build": "athloi run build -C 10",
    "checktypes": "athloi run checktypes -C 10",
    "clean": "git clean -fxd -e .vscode",
    "clean:install": "npm run clean && npm install",
    "dev": "athloi run dev --concurrency 10",
    "lint": "eslint . --ext .js,.ts,.tsx,.jsx",
    "postinstall": "athloi exec npm i",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json}'"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "npm run test -- --no-cache --findRelatedTests",
      "npm run prettier",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/anvil.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Financial-Times/anvil/issues"
  },
  "homepage": "https://github.com/Financial-Times/anvil#readme",
  "devDependencies": {
    "@financial-times/athloi": "^1.0.0-beta.12",
    "@ljharb/eslint-config": "^13.0.0",
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.1",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "hyperons": "^0.5.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^20.0.0"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checktypes && lint-staged"
    }
  }
}
