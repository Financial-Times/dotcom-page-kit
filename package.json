{
  "name": "@financial-times/anvil",
  "private": true,
  "version": "0.0.0",
  "description": "The aim of this project is to provide a high quality, well tested, and thoroughly documented, modern asset pipeline and application shell for Node.js applications based upon the latest industry standards.",
  "scripts": {
    "test": "jest",
    "build": "athloi run build --filter 'anvil*' --concurrency 10",
    "checktypes": "tsc --noEmit",
    "clean": "git clean -fxd -e .vscode",
    "clean:dist": "athloi run clean:dist --filter 'anvil*' --concurrency 10",
    "clean:install": "npm run clean && npm install",
    "clean:install:ui": "athloi run clean:install --filter 'anvil-ui-*'",
    "dev": "athloi run dev --filter 'anvil*' --concurrency 100",
    "lint": "eslint . --ext .js,.ts,.tsx,.jsx",
    "postinstall": "athloi exec npm i -- --no-package-lock",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json}'",
    "storybook": "npm run storybook:generate && npm run storybook:concurrently",
    "storybook:start": "start-storybook -p 9001 -c .storybook -h local.ft.com",
    "storybook:generate": "node ./.storybook/scripts/generateConfig",
    "storybook:generate:watch": "nodemon -e tsx --watch packages --exec \"npm run storybook:generate\"",
    "storybook:concurrently": "concurrently \"npm run storybook:generate:watch\" \"npm run storybook:start\""
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "npm run test -- --no-cache --findRelatedTests",
      "npm run prettier",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/anvil.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Financial-Times/anvil/issues"
  },
  "homepage": "https://github.com/Financial-Times/anvil#readme",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@financial-times/athloi": "^1.0.0-beta.14",
    "@storybook/addon-knobs": "^4.0.9",
    "@storybook/addon-options": "^4.0.8",
    "@storybook/react": "^4.0.9",
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.1",
    "@types/ora": "^3.0.0",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "eslint": "^5.8.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.14.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^20.0.0"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checktypes && lint-staged"
    }
  },
  "dependencies": {}
}
